<div class="container mx-auto">
  <form action="#" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Name" class="border p-2 w-full">
    <input type="email" name="email" placeholder="Email" class="border p-2 w-full">
    <textarea name="message" placeholder="Your Message" class="border p-2 w-full"></textarea>
    <button type="submit" class="bg-red-500 text-white px-4 py-2">Send</button>
  </form>
</div>
